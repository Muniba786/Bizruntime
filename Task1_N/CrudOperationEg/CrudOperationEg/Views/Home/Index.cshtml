@{
    ViewBag.Title = "Home Page";
}
<h2 style="margin-bottom:50px">CRUD OPERATION</h2>

<div class="container">

    <script src="~/Scripts/CRUD/crud.js"></script>

    
    <form>
        <div class="col-sm-6">
            <div class="form-group">
                <label for="Fname">First Name:</label>

                <input type="text" class="form-control" id="id" style="display:none">

                <input type="text" class="form-control" id="Fname" placeholder="Enter First Name">
            </div>
            <div class="form-group">
                <label for="Lname">Last Name:</label>
                <input type="text" class="form-control" id="Lname" placeholder="Enter Last Name">
            </div>

        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label for="MobNo">Mobile Number:</label>
                <input type="text" class="form-control" id="MobNo" placeholder="Enter Mobile No.">
            </div>
            <div class="form-group">
                <label for="Address">Address:</label>
                <input type="text" class="form-control" id="Address" placeholder="Enter Address">
            </div>

        </div>



        <button type="submit" id="create" class="btn btn-default" onclick="fnInsert()">Submit</button>

        <button type="submit" id="update" class="btn btn-default" onclick="fnUpdate()">Update</button>

    </form>
    <table id="ViewValues" class="table table-bordered">

    </table>

</div>